<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1>Edit Your Journey</h1>
	<%= simple_form_for @journey do |f| %>
		<%= f.input :name %>
		<%= f.input :start_addr %>
		<%= f.input :dest_addr %>
		<%= f.input :start_date %>
		<br />
		<%= f.submit 'Update', :class => 'btn btn-primary' %>
	<% end %>
</div>